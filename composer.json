{
    "name": "matusstafura/pest-plugin-fileloader",
    "description": "A PHP Pest plugin to load file",
    "keywords": [
        "php",
        "pest",
        "testing",
        "plugin",
        "matusstafura"
    ],
    "authors": [
        {
            "name": "Matus Stafura",
            "email": "kobe21@gmail.com",
            "role": "Developer"
        }
    ],
    "homepage": "https://github.com/matusstafura/pest-plugin-fileloader",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "pestphp/pest": "^1.2 || ^2.0",
        "ext-simplexml": "*"
    },
    "autoload": {
        "psr-4": {
            "MatusStafura\\PestPluginFileLoader\\": "src/"
        },
        "files": [
            "src/Functions.php"
        ]
    },
    "require-dev": {
        "pestphp/pest-dev-tools": "^2.0.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "pest",
        "coverage": "pest --coverage-html coverage",
        "stan": "phpstan"
    }
}
